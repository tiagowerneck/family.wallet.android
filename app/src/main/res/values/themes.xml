<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Family" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="Theme.Family" parent="Base.Theme.Family" />

    <style name="app" parent="Theme.Family">

        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <!-- AppCompat Attributes -->
        <item name="colorPrimary">@color/principal</item>
        <item name="colorPrimaryDark">@color/principal</item>
        <item name="colorAccent">@color/principal</item>

        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>

        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="AppTheme.FullScreen" parent="app">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/principal</item>
        <item name="background">@color/principal</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="app.widget" parent="app"/>

    <!-- TextView -->

    <style name="app.widget.text.p1" parent="android:Widget.TextView">
        <!-- REGULAR -->
        <item name="fontPath">@string/font_p1</item>
    </style>

    <style name="app.widget.text.p2" parent="android:Widget.TextView">
        <!-- SEMIBOLD -->
        <item name="fontPath">@string/font_p2</item>
    </style>

    <style name="app.widget.text.p3" parent="android:Widget.TextView">
        <!-- BOLD -->
        <item name="fontPath">@string/font_p3</item>
    </style>

    <style name="app.widget.text.p4" parent="android:Widget.TextView">
        <!-- EXTRABOLD -->
        <item name="fontPath">@string/font_p4</item>
    </style>

    <!-- BotÃµes -->

    <style name="app.widget.btn" parent="@style/Widget.AppCompat.Button.Borderless">
        <!-- Custom Attr-->
        <item name="fontPath">@string/font_p3</item>
        <item name="android:textSize">18dp</item>
        <item name="android:shadowColor">@color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="app.widget.btn.link">
        <item name="android:textColor">@color/principal</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="app.widget.btn.fill">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/principal</item>
    </style>

    <style name="app.widget.btn.fill.rounded">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/app_widget_btn_fill</item>
    </style>

    <style name="app.widget.edittext" parent="android:Widget.EditText">
        <item name="fontPath">@string/font_p2</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="app.widget.edittext.singleline">
        <item name="colorControlNormal">@color/line</item>
        <item name="colorControlActivated">@color/line</item>
        <item name="colorControlHighlight">@color/line</item>
        <item name="android:background">@drawable/app_widget_edittext_singleline</item>
        <item name="android:textColor">@color/principal</item>
        <item name="android:textColorHint">@color/secondary</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="app.widget.edittext.singleline.rounded">
        <item name="colorControlNormal">@color/line</item>
        <item name="colorControlActivated">@color/line</item>
        <item name="colorControlHighlight">@color/line</item>
        <item name="android:background">@drawable/app_widget_edittext_singleline_rounded</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text1</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>